{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Firmware",
			"type": "shell",
			"command": "zig",
			"args": [
				"build",
				"\"-Doptimize=Debug\"",
				"--summary",
				"all",
				"--verbose"
			],
			"options": {
				"cwd": "${workspaceFolder}/examples/quicklogic/eos-s3"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$zig"
			],
		},
		{
			"label": "Start Renode",
			"type": "shell",
			"command": "renode",
			"args": [
				"${workspaceFolder}/bsp/quicklogic/eos-s3/tools/renode/eos-s3.resc"
			],
			"options": {},
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": [
				"$gcc"
			],
			"dependsOn": [
				"Build Firmware"
			],
		}
	]
}